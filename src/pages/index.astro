    src={ubicacionmaps}
    alt="ScrewFast products in floating boxes"
    features={features}
  />

  <FeaturesNavs
    title=`Servicios <span class="text-yellow-500 dark:text-yellow-400">SoftCreateMarketing</span> mas requeridos.`
    tabs={[
      {
        heading: "Targetas de presentacion digitales y fisicas",
